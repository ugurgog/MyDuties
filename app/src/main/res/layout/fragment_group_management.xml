<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White">

    <androidx.appcompat.widget.AppCompatTextView
        android:fontFamily="@font/amiko"
        android:id="@+id/searchResultTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp"
        android:text="@string/THERE_IS_NO_SEARCH_RESULT"
        android:textColor="@color/DodgerBlue"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbarLayout"
            android:visibility="gone">

            <include layout="@layout/toolbar_custom_layout" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/searchToolbarLayout"
            android:visibility="gone">

            <include layout="@layout/toolbar_search_layout" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/specialRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/White">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

    <include layout="@layout/layout_progress_bar" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/nextFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:src="@drawable/ic_check_white_24dp"
        android:visibility="gone"/>

</RelativeLayout>